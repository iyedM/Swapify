{% extends 'layout/header.html.twig' %}

{% block title %}Edit Commentaire{% endblock %}

{% block body %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white">
                        <h1 class="card-title text-center mb-0">Edit Comment</h1>
                    </div>
                    <div class="card-body">
                        {# Include the form #}
                        {{ include('commentaire/_form.html.twig', {'button_label': 'Update'}) }}
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        {# Back to list link #}
                        <a href="{{ path('app_commentaire_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>

                        {# Include the delete form #}
                        {{ include('commentaire/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}