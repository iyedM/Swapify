{% extends 'layout/header.html.twig' %}

{% block title %}Blog List{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="text-center mb-4">Blog List</h1>

    {# Flash messages #}
    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }} text-center">
            {% for message in messages %}
                <p class="mb-0">{{ message }}</p>
            {% endfor %}
        </div>
    {% endfor %}

    {# Display All Blogs #}
    <div class="row">
        {% for blog in blogs %}
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg">
                    {% if blog.image %}
                    <img src="{{ asset('uploads/images/' ~ blog.image) }}" alt="{{ blog.Titre }}" class="img-fluid">
                    {% else %}
                    <img src="{{ asset('uploads/images/blog.jpg') }}" alt="{{ blog.Titre }}" class="img-fluid">
                    {% endif %}                    
                    <div class="card-body">
                        <h5 class="card-title text-primary">{{ blog.titre }}</h5>
                        <p class="card-text text-muted">{{ blog.contenu|slice(0, 100) ~ '...' }}</p>
                        <p class="mb-2">
                            <strong>Posted by:</strong> {{ blog.user.username }} {# Display the blog poster's username #}
                        </p>
                        <p class="mb-2">
                            <strong>Status:</strong>
                            <span class="badge bg-{{ blog.statut.value == 'enAttente' ? 'warning' : 'success' }}">
                                {{ blog.statut.value }}
                            </span>
                        </p>

                        <a href="{{ path('app_blog_show', {'id': blog.id}) }}" class="btn btn-primary btn-sm">Read More</a>

                        {% if blog.statut == constant('App\\Enum\\EtatEnum::enAttente') %}
                            <a href="{{ path('accept_blog', {'id': blog.id}) }}" class="btn btn-success btn-sm">Accept</a>
                        {% endif %}

                        {# Rating Section #}
                        <div class="mt-3">
                            <h6 class="text-secondary">Rate this Blog</h6>
                            <form method="POST" action="{{ path('app_blog_rate', {'id': blog.id}) }}">
                                <div class="d-flex align-items-center">
                                    <select name="rating" class="form-select me-2" required>
                                        <option value="" disabled selected>Select Rating</option>
                                        {% for i in 0..5 %}
                                            <option value="{{ i }}">{{ i }} ★</option>
                                        {% endfor %}
                                    </select>
                                    <button type="submit" class="btn btn-warning btn-sm">Submit</button>
                                </div>
                            </form>
                        
                            {# Display Average Rating with Stars #}
                            <div class="mt-3">
                                <strong>Average Rating:</strong>
                                {% if blog.getRate() > 0.0 %}
                                    <div class="rating">
                                        {# Calculate the number of full, half, and empty stars based on the average rating #}
                                        {% set fullStars = blog.getRate()|round(0, 'floor') %}
                                        {% set fractionalPart = blog.getRate() % 1 %}
                                        {% set halfStar = fractionalPart >= 0.25 and fractionalPart < 0.75 ? 1 : 0 %}
                                        {% set emptyStars = 5 - fullStars - halfStar %}
                        
                                        {# Display full stars (★) #}
                                        {% for i in 0..fullStars - 1 %}
                                            <i class="fas fa-star text-warning"></i>
                                        {% endfor %}
                        
                                        {# Display half star (½) only if the rating is not 5.0 #}
                                        {% if halfStar == 1 and fullStars < 5 %}
                                            <i class="fas fa-star-half-alt text-warning"></i>
                                        {% endif %}
                        
                                        {# Display empty stars (☆) only if it's not a perfect 5/5 #}
                                        {% if fullStars < 5 %}
                                            {% for i in 0..emptyStars - 1 %}
                                                <i class="far fa-star text-warning"></i>
                                            {% endfor %}
                                        {% endif %}
                                        
                                        {# Display numeric average rating #}
                                        <span>{{ blog.getRate()|number_format(1) }} ★</span>
                                    </div>
                                {% else %}
                                    No ratings yet.
                                {% endif %}
                            </div>
                        </div>
                        
                        

                        {# Comment Section #}
{# Comment Section #}
<div class="mt-3">
    <h6 class="text-secondary">Comments</h6>
    {# Display Existing Comments #}
    <ul class="list-group mb-3">
        {% for comment in blog.listeCommentaires %}
            <li class="list-group-item">
                <strong>Comment by:</strong> {{ comment.user.username }}
                <br>
                <strong>Comment:</strong> {{ comment.contenuCmt }}
                {# Edit Button (only visible to the comment owner) #}
                {% if comment.user == app.user or is_granted('ROLE_ADMIN') %}
                    <div class="mt-2">
                        <a href="{{ path('app_commentaire_edit', {'id': comment.id}) }}" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <form method="POST" action="{{ path('app_commentaire_delete', {'id': comment.id}) }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this comment?');">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                {% endif %}
            </li>
        {% else %}
            <li class="list-group-item text-muted">No comments yet.</li>
        {% endfor %}
    </ul>
</div>

                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center text-muted">No blogs found.</p>
            </div>
        {% endfor %}
    </div>


</div>
{% endblock %}