{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog Details</h1>
    <div class="card" style="width: 18rem;">
        <img src="C:\Users\User\Pictures\Screenshots\Capture d'Ã©cran 2025-01-30 230528.png" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{ blog.Titre }}</h5>
          <p class="card-text">{{ blog.Contenu }}</p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ blog.Contenu }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ blog.Titre }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ blog.rate }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Comments ({{ blog.listeCommentaires|length }})</h2>
    {% if blog.listeCommentaires is empty %}
        <p>No comments yet.</p>
    {% else %}
        <ul>
            {% for comment in blog.listeCommentaires %}
                <li>{{ comment.ContenuCmt }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <a href="{{ path('app_blog_index') }}">Back to list</a>
    <a href="{{ path('app_blog_edit', {'id': blog.id}) }}">Edit</a>
    
    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
